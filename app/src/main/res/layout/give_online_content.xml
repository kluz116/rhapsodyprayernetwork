<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.allan_musembya.prayer.prayernetwork.PrayerRequest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView

            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="4dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/give_image"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:src="@drawable/give_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin">

                    <TextView
                        android:id="@+id/prayer_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WE STAND WITH YOU"
                        android:textSize="@dimen/nav_user_margin"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prayer_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prayer_heading"
                        android:layout_marginTop="@dimen/nav_user_margin"
                        android:text="@string/give_content"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
                <include layout="@layout/item_divider"></include>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:paddingBottom="@dimen/activity_horizontal_margin">

                        <Button
                            android:id="@+id/visa_card_layout"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:drawableTop="@drawable/credit_card"
                            android:textColor="@color/read_devotion"
                            android:text="Visa / Master Card"
                            android:textAllCaps="false"
                            android:background="@drawable/outline_button_read_devotion"/>


                        <Button
                            android:id="@+id/bank_transfer"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="@dimen/heading_one"
                            android:drawableTop="@drawable/bank"
                            android:layout_below="@+id/visa_card_layout"
                            android:textColor="#33691e"
                            android:text="Bank Transfer"
                            android:textAllCaps="false"
                            android:background="@drawable/button_shape_outline"
                            />
                </RelativeLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>